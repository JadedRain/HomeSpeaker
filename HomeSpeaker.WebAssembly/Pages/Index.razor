@page "/"
@using HomeSpeaker.Shared;
@using HomeSpeaker.WebAssembly.Services;
@inject HomeSpeakerService svc;

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Current Song: @(status?.CurrentSong?.Name ?? "No status yet")
<button @onclick=refresh>Refresh</button>
<button @onclick="startPlaying">Start Playing</button>

<SurveyPrompt Title="How is Blazor working for you?" />

@code{
    protected override async Task OnInitializedAsync()
    {
        status = await svc.GetStatusAsync();
    }

    async Task refresh()
    {
        status = await svc.GetStatusAsync();
    }

    async Task startPlaying()
    {
        await svc.StartPlayingAsync();
    }
    GetStatusReply status;
}