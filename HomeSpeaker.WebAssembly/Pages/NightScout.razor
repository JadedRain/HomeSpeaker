@page "/nightscout"
@using Microsoft.AspNetCore.Components.WebAssembly.Hosting
@layout NoTopLayout
@inject IWebAssemblyHostEnvironment hostEnv
@inject IConfiguration config

<div class="col px-0">
    <iframe title="NightScout" src=@nightscoutUrl frameborder="0" allowfullscreen></iframe>
</div>

@code
{
    private static string? nightscoutUrl = null;

    protected override async Task OnInitializedAsync()
    {
        if (nightscoutUrl == null)
        {
            var httpClient = new HttpClient();
            nightscoutUrl = await httpClient.GetStringAsync($"{hostEnv.BaseAddress}nightscout") ?? string.Empty;
        }
    }
}