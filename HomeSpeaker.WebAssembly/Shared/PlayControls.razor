@inject HomeSpeakerService svc

<button @onclick=Play class="btn btn-outline-primary"><span class="oi oi-media-play" /></button>
<button @onclick=Stop class="btn btn-outline-primary"><span class="oi oi-media-stop"/></button>
<button @onclick=Skip class="btn btn-outline-primary"><span class="oi oi-media-skip-forward" /></button>
<button @onclick=Clear class="btn btn-outline-primary"><span class="oi oi-x" /></button>
<button @onclick=Shuffle class="btn btn-outline-primary"><span class="oi oi-random" /></button>

@code {
    async Task Play() => await svc.ResumePlayAsync();
    async Task Stop() => await svc.StopPlayingAsync();
    async Task Clear() => await svc.ClearQueueAsync();
    async Task Skip() => await svc.SkipToNextAsync();
    async Task Shuffle() => await svc.ShuffleQueueAsync();
}
