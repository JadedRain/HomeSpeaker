<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HomeSpeaker.Maui.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:shared="clr-namespace:HomeSpeaker.Shared;assembly=HomeSpeaker.Shared"
             x:Class="HomeSpeaker.Maui.Views.MainPage"
             >
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Appearing"
            Command="{Binding ViewModelLoadingCommand}" />
    </ContentPage.Behaviors>
    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <Button Text="Get Songs" Command="{Binding ViewModelLoadingCommand}" Grid.Row="0" />
        <Label Text="{Binding Songs.Count, StringFormat='Song List ({0:n0} songs)'}" Grid.Row="1" />
        <ListView Grid.Row="2" ItemsSource="{Binding Songs}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Path}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label Text="{Binding ErrorMessage}" Grid.Row="3"/>
    </Grid>
</ContentPage>
