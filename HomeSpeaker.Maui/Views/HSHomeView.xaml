<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeSpeaker.Maui.Views.HSHomeView"
             Title="HSHomeView">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Volume}"/>
        <Button
                Text="Volume"
                Command="{Binding GetVolumeCommand}">
            </Button>
        <Button Text="Get Songs"
                Command="{Binding GetSongsCommand}"/>
        <CollectionView ItemsSource="{Binding Songs}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Path}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Play First Song"
                Command="{Binding PlayFirstSongCommand}"/>
        <Button Text="Pause"
                Command="{Binding PauseSongCommand}"/>
        <Button Text="Resume"
                Command="{Binding ResumeSongCommand}"/>
        <Button Text="Folder"
                Command="{Binding PlaySongFolderCommand}"/>
    </VerticalStackLayout>
</ContentPage>