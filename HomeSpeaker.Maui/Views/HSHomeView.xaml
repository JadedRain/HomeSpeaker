<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeSpeaker.Maui.Views.HSHomeView"
             Title="HSHomeView">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Volume}"
            FontSize="20"
            TextColor="Black"
            HorizontalOptions="Center" />
        <Button
            Text="Volume"
            Command="{Binding GetVolumeCommand}"
            Padding="10" 
            BackgroundColor="#2196F3"
            TextColor="White" 
            CornerRadius="10" 
            FontSize="14" />
        <Frame BorderColor="Black"
            CornerRadius="5"
               HasShadow="True"
               Padding="5"
               Margin="0,10">
            <Entry Text="{Binding Volume}" 
                   Keyboard="Numeric"
                   Placeholder="Enter Volume (0-100)"
                   MaxLength="3"
                   TextColor="Black"
                   FontSize="16"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="Center" />
        </Frame>
        <Button Text="Play First Song"
                 Command="{Binding PlayFirstSongCommand}"
                  Padding="10" 
                  BackgroundColor="#2196F3"
                  TextColor="White" 
                  CornerRadius="10" 
                  FontSize="14" />
        <Button Text="Pause"
                  Command="{Binding PauseSongCommand}"
                  Padding="10" 
                  BackgroundColor="#2196F3"
                  TextColor="White" 
                  CornerRadius="10" 
                  FontSize="14" />
        <Button Text="Resume"
                  Command="{Binding ResumeSongCommand}"
                  Padding="10" 
                  BackgroundColor="#2196F3"
                  TextColor="White" 
                  CornerRadius="10" 
                  FontSize="14" />
        <Button Text="Play All"
                  Command="{Binding PlaySongFolderCommand}"
                  Padding="10" 
                  BackgroundColor="#2196F3"
                  TextColor="White" 
                  CornerRadius="10" 
                  FontSize="14" />
    </VerticalStackLayout>
</ContentPage>