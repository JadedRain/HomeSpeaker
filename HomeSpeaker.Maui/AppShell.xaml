<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HomeSpeaker.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:HomeSpeaker.Maui.Views"
    xmlns:local="clr-namespace:HomeSpeaker.Maui">

    <ShellContent
        Shell.NavBarIsVisible="true"
        Title="Main"
        Icon="iconblank.png"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />
    <ShellContent
        Shell.NavBarIsVisible="true"
        Title="ListDetail"
        Icon="iconlistdetail.png"
        ContentTemplate="{DataTemplate views:ListDetailPage}"
        Route="ListDetailPage" />
    <ShellContent
        Shell.NavBarIsVisible="true"
        Title="WebView"
        Icon="iconwebview.png"
        ContentTemplate="{DataTemplate views:WebViewPage}"
        Route="WebViewPage" />
    <ShellContent
        Shell.NavBarIsVisible="true"
        Title="Blank"
        Icon="iconblank.png"
        ContentTemplate="{DataTemplate views:BlankPage}"
        Route="BlankPage" />
</Shell>
